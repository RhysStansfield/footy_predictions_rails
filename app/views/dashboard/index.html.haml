.col-md-8.col-xs-12.col-lg-8.dashboard-main-box
  - if current_user.uid != nil
    .circular-image
      %img{src: "https://graph.facebook.com/#{current_user.uid}/picture?width=200&height=200"}
  .welcome
    %h1 
      Welcome
      = current_user.name

  %ul.nav.nav-tabs.dash-nav
    %li.active
      %a{"data-toggle" => "tab", :href => "#predictions"} Make Predictions
    %li
      %a{"data-toggle" => "tab", :href => "#results"} Results
    %li
      %a{"data-toggle" => "tab", :href => "#others"} Other's Predictions
    %li
      %a{"data-toggle" => "tab", :href => "#groups"} Groups
    %li
      %a{"data-toggle" => "tab", :href => "#howto"} How to Play

  .tab-content
    #predictions.tab-pane.fade.in.active
      = render 'make_predictions'
    #results.tab-pane.fade
      = render 'results'
    #others.tab-pane.fade
      = render 'others_predictions'
    #groups.tab-pane.fade
      = render 'groups_list'
    #howto.tab-pane.fade
      = render 'rules'


.col-md-4.col-xs-6.col-lg-4.leaderboard-box
  = render 'leaderboard'